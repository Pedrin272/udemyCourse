package myClasses;

public class Data {
	int dia;
	int mes;
	int ano;
	
	Data(){
		dia=1;
		mes=1;
		ano=1970;
		
	}
	Data(int diaInicial,int mesInicial,int anoInicial) {
		diaInicial=dia;
		mesInicial=mes;
		ano=anoInicial;
	}
	
	public String obterDataFormatada() {
		return String.format("%d/%d/%d",dia,mes,ano);
	}
}